            <a href="{{ path('article_remove', {'id': article.id}) }} ">Delete</a>#}

            </div>
        {% set row = row+1 %}
        {% if row == 4 %}
    </div>
        <div class="row">
            {% set row = 0 %}

            {% endif %}
        {% endfor %}
    </div>
        </div>
</div></section>
{% endblock %}
