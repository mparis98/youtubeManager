{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}
{% block body %}
    <section style="    width: 80%;
    position: relative;
    text-align: left;
margin-left: auto;
    margin-right: auto;    top: 50px;">
   <div class="container">
       <div class="row">
           <h1 style="text-align: center">Video</h1>

           <div class="col-md-2"></div>
           <div class="col-md-8">
               <h4>{{ video.title }}</h4>
               <iframe src="{{ video.urlEmbed }}" width="100%" height="400" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
               <p style="color: #C82829">{% for category4 in video.category %} #{{ category4.name }} {% endfor %}</p>
               <p>{{ video.description }}</p>
               <p>Created by {{ video.user.firstname }} {{ video.user.lastname }}</p>

           </div>

           <div class="col-md-2"></div>

       </div>
   </div>
    </section>

{% endblock %}