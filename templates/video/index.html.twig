{% extends 'base.html.twig' %}


{% block body %}
    <section style="    width: 50%;
    position: relative;
    text-align: left;
margin-left: auto;
    margin-right: auto;    top: 50px;">
        <h1 style="text-align: center">Create a video</h1>

        {{ form_start(form) }}
        {{ form_errors(form) }}

        <div>
            {{ form_label(form.title) }}
            {{ form_errors(form.title) }}
            {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
            {{ form_help(form.title) }}
        </div>

        <div>
            {{ form_label(form.youtubeUrl) }}
            {{ form_errors(form.youtubeUrl) }}
            {{ form_widget(form.youtubeUrl, { 'attr': {'class': 'form-control'} }) }}
            {{ form_help(form.youtubeUrl) }}
        </div>
        <div>
            {{ form_label(form.category) }}
            {{ form_errors(form.category) }}
            {{ form_widget(form.category, { 'attr': {'class': 'form-control'} }) }}
            {{ form_help(form.category) }}
        </div>
        {% if is_granted('ROLE_ADMIN') %}
        <div>
            {{ form_label(form.user) }}
            {{ form_errors(form.user) }}
            {{ form_widget(form.user, { 'attr': {'class': 'form-control'} }) }}
            {{ form_help(form.user) }}
        </div>
        {% endif %}
        <div>
            {{ form_label(form.createdAt) }}
            {{ form_errors(form.createdAt) }}
            {{ form_widget(form.createdAt, { 'attr': {'class': 'form-control'} }) }}
            {{ form_help(form.createdAt) }}
        </div>
        <div>
            {{ form_label(form.description) }}
            {{ form_errors(form.description) }}
            {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
            {{ form_help(form.description) }}
        </div>
        <div>
            {{ form_label(form.isActive) }}
            {{ form_errors(form.isActive) }}
            {{ form_widget(form.isActive, { 'attr': {'class': 'form-control'} }) }}
            {{ form_help(form.isActive) }}
        </div>
        <div>
            {{ form_widget(form.submit) }}
        </div>
        {{ form_end(form) }}
    </section>
{% endblock %}
